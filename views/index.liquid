{% render 'partials/head.liquid' %}

{% include 'partials/header.liquid' %}

    <main>
        <h1 class="hero-text">
            STORIES IN<br>
            BETWEEN<br>
            LAYERS<br>
            <span class="ofpaint">OF PAINT</span>
        </h1>
        <div class="hero">
            <span class="diagonal-bar back"></span>
            <img class="hero-image" src="assets/images/artwork-1.png" alt="hero-image">
            <span class="diagonal-bar"></span>
        </div>
    </main>

{% include 'partials/footer.liquid' %}

    {% comment %} 
    <ul>
      {% for art in art %}
        <li style="margin-bottom: 20px;">
          <h2>{{ art.title }}</h2>
          <p><strong>Kunstenaar:</strong> {{ art.principalOrFirstMaker }}</p>
          {% if art.webImage %}
            <img src="{{ art.webImage.url }}" alt="{{ art.title }}" width="300" />
          {% endif %}
          <p><a href="{{ art.links.web }}" target="_blank">Bekijk op Rijksmuseum.nl</a></p>
        </li>
      {% endfor %}
    </ul> 
    {% endcomment %}

{% render 'partials/foot.liquid' %}